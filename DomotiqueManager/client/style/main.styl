@import "mixins.styl"

body 
  font-family: 'Roboto', sans-serif
  background-color $mainBackgroundColor
  font-size 14px
  margin 1em
  color $mainFontColor
.container 
  margin 0 auto
  min-height 100%
  padding: 1em
.appHeader 
  background $altBackgroundColor
  padding 2em 3em
  text-align center
  margin: 1em
h1 
  font-size 2.5em
  display block
  margin-right 1em

.icon:hover
    -webkit-filter: brightness(150%)
    filter: brightness(150%)
    
.appHeader
  position relative
  .action-wrapper
    display flex
    flex-direction row
    flex-wrap wrap
    justify-content flex-en
    align-content stretch
    align-items flex-start
    height 2em
    position: absolute
    bottom 1em
    right 1.5em
    &>img
        cursor pointer
        height 100%
        width auto