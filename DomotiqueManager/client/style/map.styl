@import 'mixins.styl'
.content.map-wrapper
    height calc(100% - 10rem)
    .canvas-wrapper
        width 100%
        height 100%
        position relative
    .loading.true
        display none
    .showConsole
        position absolute
        top 2em
        right 4em
    .showPicture
        position absolute
        top 4em
        right 4em
    .loading
        margin-top: 2em
    #mapCanvas
        box-shadow: 0px 0px 2px 0px #54e81e
    #hoverCoordWrapper
        display:none
        position: absolute
        bottom: 0
        left: 0
        padding: 0.5em
        background-color: rgba(13, 13, 13, 0.3)
        &.active
            display:block
            