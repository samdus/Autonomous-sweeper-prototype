@import 'mixins'
.button
    background-color $altFontColor
    -moz-border-radius 28px
    -webkit-border-radius 28px
    border-radius 28px
    border 1px solid $altFontColor
    display inline-block
    cursor pointer
    color $altBackgroundColor
    font-family Arial
    padding 16px 31px
    text-decoration none
    text-shadow 0px 1px 0px $altBackgroundColor
    .icon
        display inline-block

.myButton:hover 
    background-color #5cbf2a

.myButton:active 
    position relative
    top 1px



.switch
    position relative
    display inline-block
    width 100%
    height 60px
    max-width 100px
    min-width 65px
    input
        display none
        & ~ .uncheckedLabel
            display block
        & ~ .checkedLabel
            display none

    .slider
        position absolute
        cursor pointer
        top 25px
        left 0
        right 0
        bottom 0
        box-shadow 0px 0px 2px 0px $altFontColor
        background-color $altFontColor
        -webkit-transition .4s
        transition .4s
        &:before
            position absolute
            content ""
            height 26px
            width 26px
            left 4px
            bottom 4px
            background-color white
            -webkit-transition .4s
            transition .4s
        &.round
            border-radius 34px
            &:before
                border-radius 50%

    input
        &:checked
            & ~ .uncheckedLabel
                display none
            & ~ .checkedLabel
                display block
            & ~ .slider
                background-color $altBackgroundColor
                &:before
                    left calc(100% - 26px - 4px)
        &:focus
            & ~ .slider
                box-shadow 0 0 1px #2196F3
    &.small
        max-width 40px
        min-width 25px
        height 35px
        .slider
            top 24px
            &:before
                height 12px
                width 12px
                left 2px
                bottom 0px
        input
            &:checked
                 & ~ .slider
                    &:before
                        left calc(100% - 13px - 2px)
.popupinputWrapper
    position relative
    .popupinput
        top:-2rem
        left -2rem
        height 2rem
        width 6rem
        position absolute
        input
            width 100%
            height 100%
            background-color $altFontColor
            color $altBackgroundColor
            font-size 1.5rem
            border 1px solid $mainBackgroundColor
        .close
            position absolute
            right 0
            background-color $altFontColor
            right 1px
            height calc(100% - 2px)
            top 1px
            cursor:pointer
        &.false
            display:none
        &.true
            display block

                    