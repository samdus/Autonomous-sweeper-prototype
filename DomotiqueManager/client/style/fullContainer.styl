 @import "mixins.styl"
 
.fullContainer
    position fixed
    top 0
    bottom 0
    right 0
    left 0
    background-color $mainBackgroundColor
    z-index 1
    animation: slideInPanel 1.0s forwards;
    -webkit-animation: slideInPanel 1.0s forwards; /* for less modern browsers */
    .back
        position absolute
        top 2rem
        left 2rem
    .title
        font-size 2.5em
        margin-top 3rem
    .content
        width 80%
        margin 0 auto
        border 1px solid white
        margin-top 3rem